extends layout 

block content
  h1.main-heading Employees who are currently on vacation

  //- if there is no one who is on vacation at the moment, show user-friendly message
  if vacationEmployees.length < 1
    h1.empty No one is currently on vacation
  ul
    each employee in vacationEmployees
      li.employee
        a.employeeName(href='/employees/' + employee.id)= employee.firstName + ' ' + employee.lastName
        a.edit(href='/employees/' + employee.id + '/edit') Edit
        hr

  .section
    a.group(href='/onDutyEmployees') On Duty Employees
    a.group(href='/medicationEmployees') On Medication Employees
    a.group(href='/employees') All employees